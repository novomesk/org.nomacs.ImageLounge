{
    "app-id": "org.nomacs.ImageLounge",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media"
    ],
    "command": "nomacs",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_ENABLE_INIH=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/archive/refs/tags/v0.28.7.tar.gz",
                    "sha512": "b53f4989abcd5d346f2a9c726a06707c47e1990ecb2e5e193c963e01d452fefe4dddd14e25eb08ef35e2f8288b8ec4bdee60725aa7dcd6b1c0348ed56c803fc0"
                }
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DWITH_FFMPEG=OFF",
                "-DBUILD_opencv_apps=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/refs/tags/4.12.0.tar.gz",
                    "sha512": "8ac63ddd61e22cc0eaeafee4f30ae6e1cab05fc4929e2cea29070203b9ca8dfead12cc0fd7c4a87b65c1e20ec6b9ab4865a1b83fad33d114fc0708fdf107c51b"
                }
            ]
        },
        {
            "name": "libraw",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LibRaw/LibRaw/archive/refs/tags/0.21.5b.tar.gz",
                    "sha512": "09168e2ed9e5e0edff1371758433ad492a0ad50d62157b2b12cf78295f5653658b660248e0cad235c3a8bbe4fd733c0133592745d0cb1b7b6397735853fd6e9c"
                },
                {
                    "type": "script",
                    "commands": [
                        "autoreconf --install --symlink"
                    ]
                }

            ]
        },
        {
            "name": "quazip",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQUAZIP_QT_MAJOR_VERSION=6"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/stachenov/quazip/archive/refs/tags/v1.5.tar.gz",
                    "sha512": "c88850f1672d20c375798c58d1cb77744ca63e93b379cf3035a528b57e83a52c1908023870152ce5fc49ad0ccf93d723dbc730b8c1d2abe18cf0b13fba3be1e1"
                }
            ]
        },
        {
            "name": "nomacs",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DENABLE_QUAZIP=ON",
                "-DENABLE_TESTING=OFF",
                "-DUSE_SYSTEM_QUAZIP=ON",
                "-DQT_VERSION_MAJOR=6"
            ],
            "subdir": "ImageLounge",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/nomacs/nomacs/archive/refs/tags/3.22.0.tar.gz",
                    "sha512": "f86b2738b35b30ac06c598ff86d00ef14bb7c1ab71f6c2b035af8258761cdb4b2e70280bbe5ba4e20bd264a7674d715ce3138357325ba2be7b43ec3214f24c64"
                }
            ]
        }
    ]
}
